@model QLKAHYTOON.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/account.css" rel="stylesheet" />
}

<div class="account-page-wrapper">
    <div class="container">
        <div class="account-card">
            <div class="account-header">
                <h2>Đăng Ký</h2>
                <h4>Tạo tài khoản để bắt đầu đọc truyện</h4>
            </div>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.HoTen, new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.HoTen, new { @class = "form-control", placeholder = "Nhập họ tên" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.TenDangNhap, new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.MatKhau, new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.XacNhanMatKhau, new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.XacNhanMatKhau, new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Đăng ký" />
                    </div>
                </div>
            }

            <div class="account-links">
                <p>@Html.ActionLink("Đã có tài khoản? Quay lại đăng nhập", "Login")</p>
            </div>
        </div>
    </div>
</div>