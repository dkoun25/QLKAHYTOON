@model List<QLKAHYTOON.Models.ViewModels.LichSuDocViewModel>
@{
    ViewBag.Title = "Lịch sử đọc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Background đen cho toàn bộ trang */
    body {
        background-color: #0a0a0a !important;
    }

    .history-container {
        padding: 20px 0;
        max-width: 1200px;
        margin: 0 auto;
        background-color: #0a0a0a;
    }

    .history-header {
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #333;
    }

        .history-header h2 {
            color: #fff;
            margin: 0;
            font-size: 28px;
            font-weight: 600;
        }

            .history-header h2 i {
                color: #e50914;
                margin-right: 10px;
            }

    .history-stats {
        color: #888;
        margin-top: 10px;
        font-size: 14px;
    }

        .history-stats i {
            color: #e50914;
            margin-right: 5px;
        }

        .history-stats strong {
            color: #e50914;
            font-weight: 600;
        }

    /* Style giống TheLoai */
    .manga-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .manga-card {
        background: #1a1a1a;
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
        border: 1px solid #2a2a2a;
    }

        .manga-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(229, 9, 20, 0.3);
            border-color: #e50914;
        }

    .manga-image {
        position: relative;
        padding-top: 140%;
        overflow: hidden;
        background: #0a0a0a;
    }

        .manga-image img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

    .manga-card:hover .manga-image img {
        transform: scale(1.05);
    }

    .time-badge {
        position: absolute;
        top: 8px;
        right: 8px;
        background: rgba(229, 9, 20, 0.95);
        color: #fff;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
        z-index: 2;
        box-shadow: 0 2px 8px rgba(0,0,0,0.4);
    }

        .time-badge i {
            margin-right: 4px;
        }

    .manga-info {
        padding: 12px;
        background: #1a1a1a;
    }

    .manga-title {
        color: #fff;
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 10px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 40px;
        line-height: 1.4;
    }

        .manga-title:hover {
            color: #e50914;
        }

    .chapter-continue {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 10px;
        background: rgba(229, 9, 20, 0.15);
        border: 1px solid rgba(229, 9, 20, 0.4);
        border-radius: 6px;
        color: #e50914;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 12px;
        font-weight: 500;
    }

        .chapter-continue:hover {
            background: rgba(229, 9, 20, 0.25);
            color: #ff1a1f;
            border-color: #e50914;
            transform: translateX(3px);
            text-decoration: none;
        }

        .chapter-continue i {
            font-size: 10px;
        }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #666;
        background: #1a1a1a;
        border-radius: 12px;
        border: 1px solid #2a2a2a;
    }

        .empty-state i {
            font-size: 80px;
            margin-bottom: 20px;
            color: #333;
        }

        .empty-state h4 {
            color: #999;
            margin-bottom: 12px;
            font-size: 22px;
        }

        .empty-state p {
            color: #666;
            margin-bottom: 20px;
        }

    .btn-primary {
        background: #e50914;
        border: none;
        padding: 10px 24px;
        border-radius: 6px;
        color: white !important;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-primary:hover {
            background: #f40612;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(229, 9, 20, 0.4);
            color: white !important;
            text-decoration: none;
        }

        .btn-primary i {
            margin-right: 8px;
        }

    /* Responsive Design */

    /* Tablet lớn và Desktop nhỏ (768px - 1024px) */
    @@media (max-width: 1024px) {
        .history-container {
            padding: 15px;
        }

        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 18px;
        }
    }

    /* Tablet (600px - 768px) */
    @@media (max-width: 768px) {
        .history-container {
            padding: 15px 10px;
        }

        .history-header h2 {
            font-size: 24px;
        }

        .history-stats {
            font-size: 13px;
        }

        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
            gap: 15px;
        }

        .manga-title {
            font-size: 13px;
            min-height: 36px;
        }

        .chapter-continue {
            font-size: 11px;
            padding: 6px 8px;
        }

        .time-badge {
            font-size: 10px;
            padding: 3px 8px;
        }
    }

    /* Mobile lớn (480px - 600px) */
    @@media (max-width: 600px) {
        .history-header {
            margin-bottom: 20px;
        }

            .history-header h2 {
                font-size: 22px;
            }

        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
            gap: 12px;
        }

        .manga-info {
            padding: 10px;
        }

        .empty-state {
            padding: 60px 15px;
        }

            .empty-state i {
                font-size: 60px;
            }

            .empty-state h4 {
                font-size: 18px;
            }

            .empty-state p {
                font-size: 14px;
            }
    }

    /* Mobile nhỏ (< 480px) */
    @@media (max-width: 480px) {
        .history-container {
            padding: 10px 8px;
        }

        .history-header h2 {
            font-size: 20px;
        }

        .history-stats {
            font-size: 12px;
        }

        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(110px, 1fr));
            gap: 10px;
        }

        .manga-card {
            border-radius: 6px;
        }

        .manga-info {
            padding: 8px;
        }

        .manga-title {
            font-size: 12px;
            min-height: 32px;
        }

        .chapter-continue {
            font-size: 10px;
            padding: 5px 7px;
            gap: 6px;
        }

            .chapter-continue i {
                font-size: 9px;
            }

        .time-badge {
            font-size: 9px;
            padding: 3px 6px;
            top: 6px;
            right: 6px;
        }

        .btn-primary {
            padding: 8px 20px;
            font-size: 14px;
        }
    }

    /* Mobile rất nhỏ (< 360px) */
    @@media (max-width: 360px) {
        .manga-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 8px;
        }

        .history-header h2 {
            font-size: 18px;
        }

        .manga-title {
            font-size: 11px;
            min-height: 30px;
        }
    }
</style>

<div class="container history-container">
    <div class="history-header">
        <h2><i class="fas fa-history"></i> Lịch sử đọc</h2>
        <div class="history-stats">
            <i class="fas fa-book-reader"></i> Tổng số: <strong>@Model.Count</strong> truyện
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="manga-grid">
            @foreach (var item in Model)
            {
                var timeAgo = GetTimeAgo(item.ThoiGianDoc);

                <div class="manga-card">
                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.Truyen.MaTruyen.Trim() })">
                        <div class="manga-image">
                            <div class="time-badge">
                                <i class="fas fa-clock"></i> @timeAgo
                            </div>
                            <img src="@item.Truyen.AnhTruyen" alt="@item.Truyen.TenTruyen" loading="lazy">
                        </div>
                    </a>
                    <div class="manga-info">
                        <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.Truyen.MaTruyen.Trim() })" style="text-decoration: none;">
                            <div class="manga-title">@item.Truyen.TenTruyen</div>
                        </a>

                        @if (item.ChapterDocGanNhat != null)
                        {
                            <a href="@Url.Action("DocTruyen", "Truyen", new { id = item.ChapterDocGanNhat.MaChuong.Trim() })"
                               class="chapter-continue">
                                <i class="fas fa-play"></i>
                                <span>Tiếp tục Ch. @item.ChapterDocGanNhat.SoChuong</span>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-history"></i>
            <h4>Chưa có lịch sử đọc</h4>
            <p>Bắt đầu đọc truyện để lưu lại lịch sử và tiếp tục từ nơi bạn đã dừng lại!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
        </div>
    }
</div>

@functions {
    public string GetTimeAgo(DateTime time)
    {
        var span = DateTime.Now - time;

        if (span.TotalMinutes < 1)
            return "Vừa xong";
        if (span.TotalMinutes < 60)
            return $"{(int)span.TotalMinutes} phút trước";
        if (span.TotalHours < 24)
            return $"{(int)span.TotalHours} giờ trước";
        if (span.TotalDays < 7)
            return $"{(int)span.TotalDays} ngày trước";
        if (span.TotalDays < 30)
            return $"{(int)(span.TotalDays / 7)} tuần trước";
        if (span.TotalDays < 365)
            return $"{(int)(span.TotalDays / 30)} tháng trước";

        return time.ToString("dd/MM/yyyy");
    }
}