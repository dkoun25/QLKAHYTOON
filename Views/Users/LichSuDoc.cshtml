@model List<QLKAHYTOON.Models.ViewModels.LichSuDocViewModel>
@{
    ViewBag.Title = "Lịch sử đọc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .history-container {
        padding: 20px 0;
    }

    .history-header {
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #444;
    }

    .history-header h2 {
        color: #fff;
        margin: 0;
    }

    .history-stats {
        color: #aaa;
        margin-top: 10px;
    }

    .manga-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .manga-card {
        background: #2d2d2d;
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }

    .manga-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.5);
    }

    .manga-image {
        position: relative;
        padding-top: 140%;
        overflow: hidden;
        background: #1a1a1a;
    }

    .manga-image img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .time-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(33, 150, 243, 0.9);
        color: white;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: bold;
        z-index: 1;
    }

    .manga-info {
        padding: 15px;
    }

    .manga-title {
        color: #fff;
        font-weight: bold;
        margin-bottom: 10px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 48px;
    }

    .chapter-continue {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px 12px;
        background: rgba(76, 175, 80, 0.2);
        border: 1px solid #4CAF50;
        border-radius: 6px;
        color: #4CAF50;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 13px;
    }

    .chapter-continue:hover {
        background: rgba(76, 175, 80, 0.3);
        color: #66BB6A;
        transform: translateX(5px);
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #888;
    }

    .empty-state i {
        font-size: 80px;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    @@media (max-width: 768px) {
        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
        }
    }
</style>

<div class="container history-container">
    <div class="history-header">
        <h2><i class="fas fa-history"></i> Lịch sử đọc</h2>
        <div class="history-stats">
            <i class="fas fa-book-reader"></i> Tổng số: <strong>@Model.Count</strong> truyện
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="manga-grid">
            @foreach (var item in Model)
            {
                var timeAgo = GetTimeAgo(item.ThoiGianDoc);

                <div class="manga-card">
                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.Truyen.MaTruyen.Trim() })">
                        <div class="manga-image">
                            <div class="time-badge">
                                <i class="fas fa-clock"></i> @timeAgo
                            </div>
                            <img src="@item.Truyen.AnhTruyen" alt="@item.Truyen.TenTruyen" loading="lazy">
                        </div>
                    </a>
                    <div class="manga-info">
                        <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.Truyen.MaTruyen.Trim() })" style="text-decoration: none;">
                            <div class="manga-title">@item.Truyen.TenTruyen</div>
                        </a>

                        @if (item.ChapterDocGanNhat != null)
                        {
                            <a href="@Url.Action("DocTruyen", "Truyen", new { id = item.ChapterDocGanNhat.MaChuong.Trim() })"
                               class="chapter-continue">
                                <i class="fas fa-play"></i>
                                <span>Tiếp tục Chương @item.ChapterDocGanNhat.SoChuong</span>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-history"></i>
            <h4>Chưa có lịch sử đọc</h4>
            <p>Bắt đầu đọc truyện để lưu lại lịch sử và tiếp tục từ nơi bạn đã dừng lại!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
        </div>
    }
</div>

@functions {
    public string GetTimeAgo(DateTime time)
    {
        var span = DateTime.Now - time;

        if (span.TotalMinutes < 1)
            return "Vừa xong";
        if (span.TotalMinutes < 60)
            return $"{(int)span.TotalMinutes} phút trước";
        if (span.TotalHours < 24)
            return $"{(int)span.TotalHours} giờ trước";
        if (span.TotalDays < 7)
            return $"{(int)span.TotalDays} ngày trước";
        if (span.TotalDays < 30)
            return $"{(int)(span.TotalDays / 7)} tuần trước";
        if (span.TotalDays < 365)
            return $"{(int)(span.TotalDays / 30)} tháng trước";

        return time.ToString("dd/MM/yyyy");
    }
}