@model List<QLKAHYTOON.Models.ViewModels.TruyenTheoDoiViewModel>
@{
    ViewBag.Title = "Truyện theo dõi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #0a0a0a !important;
    }
    .follow-container {
        padding: 20px 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .follow-header {
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #333;
    }

    .follow-header h2 {
        color: #fff;
        margin: 0;
        font-size: 28px;
        font-weight: 600;
    }

    .follow-stats {
        color: #888;
        margin-top: 10px;
        font-size: 14px;
    }

    .follow-stats strong {
        color: #e50914;
    }

    .manga-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .manga-card {
        background: #1a1a1a;
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
        border: 1px solid #2a2a2a;
    }

    .manga-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(229, 9, 20, 0.3);
        border-color: #e50914;
    }

    .manga-image {
        position: relative;
        padding-top: 140%;
        overflow: hidden;
        background: #0a0a0a;
    }

    .manga-image img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .manga-card:hover .manga-image img {
        transform: scale(1.05);
    }

    .new-chapter-badge {
        position: absolute;
        top: 8px;
        right: 8px;
        background: linear-gradient(135deg, #e50914, #b20710);
        color: white;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(229, 9, 20, 0.5);
        z-index: 2;
    }

    .manga-info {
        padding: 12px;
        background: #1a1a1a;
    }

    .manga-title {
        color: #fff;
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 10px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 40px;
        line-height: 1.4;
    }

    .manga-title:hover {
        color: #e50914;
    }

    .chapter-info {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .chapter-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 10px;
        border-radius: 6px;
        font-size: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .chapter-new {
        background: rgba(229, 9, 20, 0.15);
        border: 1px solid rgba(229, 9, 20, 0.4);
        color: #e50914;
    }

    .chapter-new:hover {
        background: rgba(229, 9, 20, 0.25);
        color: #ff1a1f;
        border-color: #e50914;
    }

    .chapter-reading {
        background: rgba(102, 102, 102, 0.15);
        border: 1px solid rgba(102, 102, 102, 0.4);
        color: #999;
    }

    .chapter-reading:hover {
        background: rgba(102, 102, 102, 0.25);
        color: #ccc;
        border-color: #666;
    }

    .chapter-badge i {
        font-size: 10px;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: #666;
        background: #1a1a1a;
        border-radius: 12px;
        border: 1px solid #2a2a2a;
    }

    .empty-state i {
        font-size: 80px;
        margin-bottom: 20px;
        color: #333;
    }

    .empty-state h4 {
        color: #999;
        margin-bottom: 12px;
        font-size: 22px;
    }

    .empty-state p {
        color: #666;
        margin-bottom: 20px;
    }

    .btn-primary {
        background: #e50914;
        border: none;
        padding: 10px 24px;
        border-radius: 6px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary:hover {
        background: #f40612;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(229, 9, 20, 0.4);
        color: white;
    }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .follow-container {
            padding: 15px;
        }

        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 18px;
        }
    }

    /* Tablet (600px - 768px) */
    @@media (max-width: 768px) {
        .follow-container {
            padding: 15px 10px;
        }

        .follow-header h2 {
            font-size: 24px;
        }

        .follow-stats {
            font-size: 13px;
        }

        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
            gap: 15px;
        }

        .manga-title {
            font-size: 13px;
            min-height: 36px;
        }

        .chapter-badge {
            font-size: 11px;
            padding: 6px 8px;
        }

        .new-chapter-badge {
            font-size: 10px;
            padding: 3px 8px;
        }
    }

    /* Mobile lớn (480px - 600px) */
    @@media (max-width: 600px) {
        .follow-header {
            margin-bottom: 20px;
        }

        .follow-header h2 {
            font-size: 22px;
        }

        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
            gap: 12px;
        }

        .manga-info {
            padding: 10px;
        }

        .empty-state {
            padding: 60px 15px;
        }

        .empty-state i {
            font-size: 60px;
        }

        .empty-state h4 {
            font-size: 18px;
        }

        .empty-state p {
            font-size: 14px;
        }
    }

    /* Mobile nhỏ (< 480px) */
    @@media (max-width: 480px) {
        .follow-container {
            padding: 10px 8px;
        }

        .follow-header h2 {
            font-size: 20px;
        }

        .follow-stats {
            font-size: 12px;
        }

        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(110px, 1fr));
            gap: 10px;
        }

        .manga-card {
            border-radius: 6px;
        }

        .manga-info {
            padding: 8px;
        }

        .manga-title {
            font-size: 12px;
            min-height: 32px;
        }

        .chapter-badge {
            font-size: 10px;
            padding: 5px 7px;
            gap: 6px;
        }

        .chapter-badge i {
            font-size: 9px;
        }

        .new-chapter-badge {
            font-size: 9px;
            padding: 3px 6px;
            top: 6px;
            right: 6px;
        }

        .btn-primary {
            padding: 8px 20px;
            font-size: 14px;
        }
    }

    /* Mobile rất nhỏ (< 360px) */
    @@media (max-width: 360px) {
        .manga-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 8px;
        }

        .follow-header h2 {
            font-size: 18px;
        }

        .manga-title {
            font-size: 11px;
            min-height: 30px;
        }

        .chapter-info {
            gap: 6px;
        }
    }
</style>

<div class="container follow-container">
    <div class="follow-header">
        <h2><i class="fas fa-bookmark"></i> Truyện theo dõi</h2>
        <div class="follow-stats">
            <i class="fas fa-book"></i> Tổng số: <strong>@Model.Count</strong> truyện
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="manga-grid">
            @foreach (var item in Model)
            {
                <div class="manga-card">
                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.Truyen.MaTruyen.Trim() })">
                        <div class="manga-image">
                            @if (item.ChapterMoiNhat != null)
                            {
                                <div class="new-chapter-badge">
                                    <i class="fas fa-fire"></i> Mới
                                </div>
                            }
                            <img src="@item.Truyen.AnhTruyen" alt="@item.Truyen.TenTruyen" loading="lazy">
                        </div>
                    </a>
                    <div class="manga-info">
                        <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.Truyen.MaTruyen.Trim() })" style="text-decoration: none;">
                            <div class="manga-title">@item.Truyen.TenTruyen</div>
                        </a>

                        <div class="chapter-info">
                            @if (item.ChapterMoiNhat != null)
                            {
                                <a href="@Url.Action("DocTruyen", "Truyen", new { id = item.ChapterMoiNhat.MaChuong.Trim() })"
                                   class="chapter-badge chapter-new">
                                    <i class="fas fa-book-open"></i>
                                    <span>Chương @item.ChapterMoiNhat.SoChuong</span>
                                </a>
                            }

                            @if (item.ChapterDocGanNhat != null)
                            {
                                <a href="@Url.Action("DocTruyen", "Truyen", new { id = item.ChapterDocGanNhat.MaChuong.Trim() })"
                                   class="chapter-badge chapter-reading">
                                    <i class="fas fa-history"></i>
                                    <span>Đọc: Ch. @item.ChapterDocGanNhat.SoChuong</span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-bookmark"></i>
            <h4>Chưa có truyện theo dõi</h4>
            <p>Hãy thêm truyện yêu thích vào danh sách theo dõi để cập nhật chapter mới nhất!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
        </div>
    }
</div>