@model List<QLKAHYTOON.Models.ViewModels.TruyenTheoDoiViewModel>
@{
    ViewBag.Title = "Truyện theo dõi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .follow-container {
        padding: 20px 0;
    }

    .follow-header {
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #444;
    }

    .follow-header h2 {
        color: #fff;
        margin: 0;
    }

    .follow-stats {
        color: #aaa;
        margin-top: 10px;
    }

    .manga-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .manga-card {
        background: #2d2d2d;
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
        position: relative;
    }

    .manga-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.5);
    }

    .manga-image {
        position: relative;
        padding-top: 140%;
        overflow: hidden;
        background: #1a1a1a;
    }

    .manga-image img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .new-chapter-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
        color: white;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: bold;
        box-shadow: 0 2px 8px rgba(255,107,107,0.4);
        z-index: 1;
    }

    .manga-info {
        padding: 15px;
    }

    .manga-title {
        color: #fff;
        font-weight: bold;
        margin-bottom: 10px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 48px;
    }

    .chapter-info {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .chapter-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 13px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .chapter-new {
        background: rgba(76, 175, 80, 0.2);
        border: 1px solid #4CAF50;
        color: #4CAF50;
    }

    .chapter-new:hover {
        background: rgba(76, 175, 80, 0.3);
        color: #66BB6A;
    }

    .chapter-reading {
        background: rgba(33, 150, 243, 0.2);
        border: 1px solid #2196F3;
        color: #2196F3;
    }

    .chapter-reading:hover {
        background: rgba(33, 150, 243, 0.3);
        color: #42A5F5;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #888;
    }

    .empty-state i {
        font-size: 80px;
        margin-bottom: 20px;
        opacity: 0.3;
    }

    @@media (max-width: 768px) {
        .manga-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
        }
    }
</style>

<div class="container follow-container">
    <div class="follow-header">
        <h2><i class="fas fa-bookmark"></i> Truyện theo dõi</h2>
        <div class="follow-stats">
            <i class="fas fa-book"></i> Tổng số: <strong>@Model.Count</strong> truyện
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="manga-grid">
            @foreach (var item in Model)
            {
                <div class="manga-card">
                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.Truyen.MaTruyen.Trim() })">
                        <div class="manga-image">
                            @if (item.ChapterMoiNhat != null)
                            {
                                <div class="new-chapter-badge">
                                    <i class="fas fa-fire"></i> Mới
                                </div>
                            }
                            <img src="@item.Truyen.AnhTruyen" alt="@item.Truyen.TenTruyen" loading="lazy">
                        </div>
                    </a>
                    <div class="manga-info">
                        <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.Truyen.MaTruyen.Trim() })" style="text-decoration: none;">
                            <div class="manga-title">@item.Truyen.TenTruyen</div>
                        </a>

                        <div class="chapter-info">
                            @if (item.ChapterMoiNhat != null)
                            {
                                <a href="@Url.Action("DocTruyen", "Truyen", new { id = item.ChapterMoiNhat.MaChuong.Trim() })"
                                   class="chapter-badge chapter-new">
                                    <i class="fas fa-book-open"></i>
                                    <span>Chương @item.ChapterMoiNhat.SoChuong</span>
                                </a>
                            }

                            @if (item.ChapterDocGanNhat != null)
                            {
                                <a href="@Url.Action("DocTruyen", "Truyen", new { id = item.ChapterDocGanNhat.MaChuong.Trim() })"
                                   class="chapter-badge chapter-reading">
                                    <i class="fas fa-history"></i>
                                    <span>Đọc: Ch. @item.ChapterDocGanNhat.SoChuong</span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-bookmark"></i>
            <h4>Chưa có truyện theo dõi</h4>
            <p>Hãy thêm truyện yêu thích vào danh sách theo dõi để cập nhật chapter mới nhất!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
        </div>
    }
</div>