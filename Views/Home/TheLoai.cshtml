@model IEnumerable<QLKAHYTOON.Models.theloai>
@{
    ViewBag.Title = "Tất Cả Thể Loại";
}

<style>
    .genre-list .list-group-item {
        background-color: #1e1e1e;
        border-color: #333;
        color: #e0e0e0;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: background-color 0.2s;
    }

        .genre-list .list-group-item:hover {
            background-color: #333;
            color: #17a2b8;
        }
</style>

<h2>@ViewBag.Title</h2>
<hr />

<div class="list-group genre-list">
    @foreach (var item in Model)
    {
        // Tạm thời link chưa trỏ đi đâu, sau này sẽ nâng cấp để lọc truyện theo thể loại
        <a href="#" class="list-group-item">
            <h4>@item.TenTheLoai</h4>
        </a>
    }
</div>