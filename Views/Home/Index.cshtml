@model MangaKahytoon.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Trang Chủ - Đọc Manga Online";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid py-4">
    <div class="row">

        <div class="col-lg-9">

            <h3 class="text-white mb-3">🔥 MỚI CẬP NHẬT</h3>

            <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-3">
                @if (Model.LatestMangas != null && Model.LatestMangas.Any())
                {
                    @foreach (var truyen in Model.LatestMangas)
                    {
                        <div class="col">
                            <div class="manga-card p-2 rounded">
                                <a asp-controller="Manga" asp-action="Detail" asp-route-id="@truyen.TruyenID" class="text-decoration-none text-light">
                                    <img src="~/images/@truyen.AnhBiaUrl" alt="@truyen.TenTruyen" class="manga-cover rounded">
                                    <div class="manga-info">
                                        <h6 class="mt-2 text-truncate">@truyen.TenTruyen</h6>
                                        <span class="latest-chapter">Lượt xem: @truyen.LuotXem</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-secondary">Chưa có truyện nào để hiển thị.</p>
                }
            </div>

        </div>

        <div class="col-lg-3 d-none d-lg-block">
            <div class="ranking-panel p-3 rounded">
                <h4 class="text-white mb-3">🏆 Top Xếp Hạng</h4>
                <ul class="list-unstyled">
                    @if (Model.TopRankMangas != null)
                    {
                        var rank = 1;
                        @foreach (var truyen in Model.TopRankMangas)
                        {
                            <li class="py-2 border-bottom border-secondary">
                                <a asp-controller="Manga" asp-action="Detail" asp-route-id="@truyen.TruyenID" class="text-decoration-none text-light">
                                    <span class="fw-bold me-2 text-warning">#@rank.</span> @truyen.TenTruyen
                                </a>
                            </li>
                            rank++;
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>