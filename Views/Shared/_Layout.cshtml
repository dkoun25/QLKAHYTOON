<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KAHY Toon</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Navbar.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top kahy-navbar">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
                <img src="@Url.Content("~/Anh/logo.png")" alt="KAHY Toon" height="40" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Trang Chủ", "Index", "Home", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Thể Loại", "TheLoai", "Home", new { id = "" }, new { @class = "nav-link" })
                    </li>
                </ul>

                <div class="search-container mx-auto">
                    <form action="@Url.Action("TimKiem", "Home")" method="get" class="search-form" id="searchForm">
                        <div class="search-wrapper">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text"
                                   id="searchInput"
                                   name="keyword"
                                   class="search-input"
                                   placeholder="Tìm kiếm truyện..."
                                   autocomplete="off">
                            <button type="submit" class="btn-search-submit">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>

                        <div id="searchDropdown" class="search-dropdown" style="display: none;">
                            <div class="search-results" id="searchResults"></div>
                            <div class="search-footer">
                                <span class="text-muted">Nhấn Enter để xem tất cả kết quả</span>
                            </div>
                        </div>
                    </form>
                </div>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @{
                        var user = Session["User"] as QLKAHYTOON.Models.nguoidung;
                        var admin = Session["User"] as QLKAHYTOON.Models.admin;
                        bool isAdmin = Session["IsAdmin"] != null && (bool)Session["IsAdmin"];
                    }

                    @if (isAdmin && admin != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Admin")">
                                <span class="badge bg-danger">ADMIN</span> @admin.HoTen
                            </a>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng Xuất", "Logout", "Account", null, new { @class = "nav-link" })
                        </li>
                    }
                    else if (user != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="@(string.IsNullOrEmpty(user.Avatar) ? "/Anh/Avatar/default-avatar.png" : user.Avatar)"
                                     alt="Avatar"
                                     class="user-avatar-nav me-2">
                                <span>Xin chào, @user.HoTen</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end user-dropdown" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("TruyenTheoDoi", "Users")">
                                        <i class="fas fa-bookmark text-primary"></i> Truyện theo dõi
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("LichSuDoc", "Users")">
                                        <i class="fas fa-history text-success"></i> Lịch sử đọc
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("CaiDatTaiKhoan", "Users")">
                                        <i class="fas fa-cog text-warning"></i> Cài đặt tài khoản
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Đăng Ký", "Register", "Account", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng Nhập", "Login", "Account", null, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="padding-top: 80px;">
        @RenderBody()
        <hr style="border-top: 1px solid #333;" />
        <footer>
            <p style="color: #888;">&copy; @DateTime.Now.Year - Đồ án Website Truyện Tranh ASP.NET MVC</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.3.2/lazysizes.min.js"></script>

    <script>
    $(document).ready(function() {
        var searchTimeout;
        var $searchInput = $('#searchInput');
        var $searchDropdown = $('#searchDropdown');
        var $searchResults = $('#searchResults');
        var $searchForm = $('#searchForm');

        $searchInput.on('input', function() {
            clearTimeout(searchTimeout);
            var keyword = $(this).val().trim();

            if (keyword.length < 2) {
                $searchDropdown.hide();
                return;
            }

            searchTimeout = setTimeout(function() {
                searchManga(keyword);
            }, 300);
        });

        $searchForm.on('submit', function(e) {
            var keyword = $searchInput.val().trim();

            if (keyword.length === 0) {
                e.preventDefault();
                alert('Vui lòng nhập từ khóa tìm kiếm!');
                return false;
            }

            $searchDropdown.hide();
        });

        $(document).on('click', function(e) {
            if (!$(e.target).closest('.search-container').length) {
                $searchDropdown.hide();
            }
        });

        $searchInput.on('focus', function() {
            if ($searchResults.children().length > 0) {
                $searchDropdown.show();
            }
        });

        $(document).on('click', '.search-item', function() {
            $searchDropdown.hide();
        });

        function searchManga(keyword) {
            $.ajax({
                url: '@Url.Action("GetSearchSuggestions", "Home")',
                type: 'GET',
                data: { keyword: keyword },
                success: function(response) {
                    displayResults(response.data);
                },
                error: function() {
                    $searchResults.html('<div class="search-item-error">Lỗi kết nối!</div>');
                    $searchDropdown.show();
                }
            });
        }

        function displayResults(data) {
            $searchResults.empty();

            if (!data || data.length === 0) {
                $searchResults.html('<div class="search-item-empty">Không tìm thấy truyện nào</div>');
                $searchDropdown.show();
                return;
            }

            $.each(data, function(index, item) {
                var chapterText = item.ChapterMoi || 'Đang cập nhật';

                var html = `
                    <a href="/Truyen/ChiTiet/${item.MaTruyen.trim()}" class="search-item">
                        <div class="search-item-image">
                            <img src="${item.AnhTruyen}" alt="${item.TenTruyen}">
                        </div>
                        <div class="search-item-info">
                            <div class="search-item-title">${item.TenTruyen}</div>
                            <div class="search-item-chapter">
                                <i class="fas fa-book"></i> ${chapterText}
                            </div>
                        </div>
                    </a>
                `;
                $searchResults.append(html);
            });

            $searchDropdown.show();
        }
    });
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>