<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KAHY Toon</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" style="background-color: #1f1f1f !important;">
        <div class="container">
            @Html.ActionLink("KAHY Toon", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Trang Chủ", "Index", "Home", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Thể Loại", "TheLoai", "Home", null, new { @class = "nav-link" })
                    </li>
                </ul>

                @using (Html.BeginForm("TimKiem", "Truyen", FormMethod.Get, new { @class = "d-flex" }))
                {
                    <input type="text" name="keyword" class="form-control me-2" placeholder="Tìm kiếm truyện...">
                    <button type="submit" class="btn btn-outline-danger">Tìm</button>
                }

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    @{
                        var user = Session["User"] as QLKAHYTOON.Models.nguoidung;
                    }
                    @if (user != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Profile", "User")">Chào, @user.HoTen</a>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng Xuất", "Logout", "Account", null, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Đăng Ký", "Register", "Account", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Đăng Nhập", "Login", "Account", null, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content" style="padding-top: 70px;">
        @RenderBody()
        <hr style="border-top: 1px solid #333;" />
        <footer>
            <p style="color: #888;">&copy; @DateTime.Now.Year - Đồ án Website Truyện Tranh ASP.NET MVC</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.3.2/lazysizes.min.js" integrity="sha512-q583ppKrCRc7N5O0n2nzUiJ+suUv7Et1JGels4bXOaMFQcamPk9HjdUknZuuFjBNs7tsMuadge5k9RzdmO+1GQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @RenderSection("scripts", required: false)

</body>
</html>