<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom Admin CSS -->
    <link href="~/Content/AdminLayout.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="@Url.Action("Index", "Admin")">
                        <i class="fa fa-chart-line"></i> Admin Panel
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Admin")">
                        <i class="fa fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("QuanLyTruyen", "Admin")">
                        <i class="fa fa-book"></i>
                        <span>Quản Lý Truyện</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("QuanLyNguoiDung", "Admin")">
                        <i class="fa fa-users"></i>
                        <span>Quản Lý Người Dùng</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("QuanLyBaoCao", "Admin")">
                        <i class="fa fa-flag"></i>
                        <span>Quản Lý Báo Cáo</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("QuanLyAdmin", "Admin")">
                        <i class="fa fa-user-shield"></i>
                        <span>Quản Lý Admin</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Logout", "Admin")" onclick="return confirm('Bạn có chắc muốn đăng xuất?');">
                        <i class="fa fa-sign-out-alt"></i>
                        <span>Đăng Xuất</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>