<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom Admin CSS -->
    <link href="~/Content/AdminLayout.css" rel="stylesheet" />
</head>
<body>
    <!-- Nút toggle sidebar (hiển thị khi sidebar bị ẩn) -->
    <div id="menu-toggle-btn" class="menu-toggle-btn">
        <i class="fas fa-bars"></i>
    </div>

    <!-- Wrapper chính -->
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="@Url.Action("Index", "Admin")">
                        <i class="fas fa-tachometer-alt"></i> KAHY Admin
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Admin")">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("QuanLyTruyen", "Admin")">
                        <i class="fas fa-book"></i> Quản lý Truyện
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("QuanLyNguoiDung", "Admin")">
                        <i class="fas fa-file-alt"></i> Quản lý người dùng
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("QuanLyBaoCao", "Admin")">
                        <i class="fas fa-tags"></i> Quản lý báo cáo
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("QuanLyAdmin", "Admin")">
                        <i class="fas fa-users"></i> Quản lý tài khoản Admin
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Home", new { area = "" })">
                        <i class="fas fa-external-link-alt"></i> Về trang chủ
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Logout", "Admin")" onclick="return confirm('Bạn có chắc muốn đăng xuất?');">
                        <i class="fa fa-sign-out-alt"></i>
                        <span>Đăng Xuất</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Các script cũ của bạn -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lazysizes/5.3.2/lazysizes.min.js"></script>

    <!-- Script toggle sidebar -->
    <script>
        $(document).ready(function () {
            $("#menu-toggle-btn").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });

            // Ẩn sidebar mặc định trên màn hình nhỏ (<992px)
            if ($(window).width() < 992) {
                $("#wrapper").addClass("toggled");
            }

            // Khi resize cửa sổ
            $(window).resize(function () {
                if ($(window).width() >= 992) {
                    $("#wrapper").removeClass("toggled");
                } else {
                    $("#wrapper").addClass("toggled");
                }
            });
        });
    </script>

    <!-- Script search cũ của bạn -->
    <script>
        $(document).ready(function () {
            var searchTimeout;
            var $searchInput = $('#searchInput');
            var $searchDropdown = $('#searchDropdown');
            var $searchResults = $('#searchResults');
            var $searchForm = $('#searchForm');
            // ... (giữ nguyên toàn bộ script search cũ của bạn ở đây)
        });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>