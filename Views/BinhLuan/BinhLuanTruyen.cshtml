@model IEnumerable<QLKAHYTOON.Models.binhluan>
@{
    // ⭐ FIX: Check cả User và Admin
    var user = Session["User"] as QLKAHYTOON.Models.nguoidung;
    var admin = Session["User"] as QLKAHYTOON.Models.admin;
    bool isAdmin = Session["IsAdmin"] != null && (bool)Session["IsAdmin"];
    bool isLoggedIn = (user != null || admin != null);

    ViewBag.User = user;
    ViewBag.Admin = admin;
    ViewBag.IsAdmin = isAdmin;
}

<div class="comment-section mt-5 p-3 bg-light rounded">
    <h4 class="mb-4 text-primary fw-bold"><i class="fa-solid fa-comments"></i> BÌNH LUẬN</h4>

    @if (isLoggedIn)
    {
        string displayName = isAdmin && admin != null ? admin.HoTen : (user != null ? user.HoTen : "");
        string avatarUrl = isAdmin ? "/Anh/admin-avatar.png" : (user != null && !string.IsNullOrEmpty(user.Avatar) ? user.Avatar : "/Anh/avatar-default.png");

        <div class="d-flex mb-4">
            <img src="@avatarUrl" class="rounded-circle me-3" style="width:50px; height:50px; object-fit:cover;">
            <div class="w-100">
                <textarea id="txtMainComment" class="form-control" rows="2" placeholder="@displayName, viết bình luận..."></textarea>
                <button class="btn btn-sm mt-2 text-white" style="background-color: #5f27a2;" onclick="submitComment(null)">Gửi bình luận</button>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Vui lòng <a href="/Account/Login" class="fw-bold">Đăng nhập</a> để bình luận.</div>
    }

    <div class="comment-list">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                @Html.Partial("_CommentItem", item)
            }
        }
        else
        {
            <p class="text-center text-muted">Chưa có bình luận nào.</p>
        }
    </div>
</div>

<script>
    function toggleReplyBox(id) {
        var box = document.getElementById('reply-box-' + id);
        if (box) box.style.display = (box.style.display === 'none') ? 'block' : 'none';
    }

    function submitComment(parentId) {
        // 1. Lấy nội dung
        var txtInput = parentId == null
            ? document.getElementById('txtMainComment')
            : document.getElementById('txtReply-' + parentId);

        var content = txtInput ? txtInput.value : "";

        if (!content || !content.trim()) {
            alert("Vui lòng nhập nội dung!");
            return;
        }

        // 2. Lấy ID Truyện/Chương
        var maTruyenEl = document.getElementById('hdMaTruyen');
        var maChuongEl = document.getElementById('hdMaChuong');

        if (!maTruyenEl) {
            alert("Lỗi: Không tìm thấy thẻ input id='hdMaTruyen'");
            return;
        }

        var vMaTruyen = maTruyenEl.value;
        var vMaChuong = (maChuongEl && maChuongEl.value !== "") ? maChuongEl.value : null;

        // 3. Gửi Ajax
        $.ajax({
            url: '/BinhLuan/PostBinhLuan',
            type: 'POST',
            data: {
                maTruyen: vMaTruyen,
                maChuong: vMaChuong,
                noiDung: content,
                maBinhLuanCha: parentId
            },
            success: function (res) {
                if (res.success) {
                    location.reload();
                } else {
                    alert("Lỗi: " + res.msg);
                }
            },
            error: function (xhr) {
                alert("Lỗi Server (Code " + xhr.status + ")");
                console.error("Error details:", xhr.responseText);
            }
        });
    }

    function likeComment(id) {
        $.ajax({
            url: '/BinhLuan/LikeBinhLuan',
            type: 'POST',
            data: { maBinhLuan: id },
            success: function (res) {
                if (res.success) $('#like-count-' + id).text(res.likes);
            }
        });
    }

    function deleteComment(id) {
        if (!confirm('Bạn có chắc chắn muốn xóa bình luận này? (Tất cả replies sẽ bị xóa)')) {
            return;
        }

        $.ajax({
            url: '/BinhLuan/XoaBinhLuan',
            type: 'POST',
            data: { maBinhLuan: id },
            success: function (res) {
                if (res.success) {
                    $('#cmt-' + id).fadeOut(300, function () {
                        $(this).remove();
                    });
                } else {
                    alert("Lỗi: " + res.msg);
                }
            },
            error: function (xhr) {
                alert("Lỗi Server (Code " + xhr.status + ")");
                console.error("Error details:", xhr.responseText);
            }
        });
    }
</script>

