@model IEnumerable<QLKAHYTOON.Models.admin>
@{ ViewBag.Title = "Quản Lý Admin"; Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h2>Danh Sách Quản Trị Viên</h2>

<div class="well">
    <h4>Thêm Admin Mới</h4>
    @using (Html.BeginForm("ThemAdminMoi", "Admin", FormMethod.Post, new { @class = "form-inline" }))
    {
        <input type="text" name="tenDangNhap" class="form-control" placeholder="Tên đăng nhập" required />
        <input type="password" name="matKhau" class="form-control" placeholder="Mật khẩu" required />
        <input type="text" name="hoTen" class="form-control" placeholder="Họ tên" required />
        <input type="email" name="email" class="form-control" placeholder="Email" required />
        <button type="submit" class="btn btn-success">Thêm</button>
    }
    @if (TempData["Error"] != null)
    {<p class="text-danger mt-2">@TempData["Error"]</p>}
    @if (TempData["Success"] != null)
    {<p class="text-success mt-2">@TempData["Success"]</p>}
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Admin</th>
            <th>Tên Đăng Nhập</th>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaAdmin</td>
                <td>@item.TenDangNhap</td>
                <td>@item.HoTen</td>
                <td>@item.Email</td>
                <td>
                    <a href="@Url.Action("XoaAdmin", "Admin", new { id = item.MaAdmin })"
                       class="btn btn-danger btn-sm" onclick="return confirm('Xóa admin này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>