@model QLKAHYTOON.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Đăng Nhập Quản Trị";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
        }

        .admin-login-wrapper {
            max-width: 450px;
            width: 100%;
        }

        .admin-login-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 40px;
            animation: slideUp 0.6s ease-out;
            backdrop-filter: blur(10px);
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .admin-logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 25px rgba(95, 39, 162, 0.3);
        }

        .admin-logo i {
            font-size: 40px;
            color: white;
        }

        .admin-header {
            text-align: center;
            margin-bottom: 35px;
        }

        .admin-header h3 {
            color: #667eea;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .admin-header p {
            color: #666;
            font-size: 14px;
            font-weight: 400;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        .form-group label {
            color: #333;
            font-weight: 600;
            font-size: 14px;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            width: 100%;
            padding: 14px 18px 14px 45px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #f8f9fa;
            color: #333;
        }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 43px;
            color: #999;
            font-size: 18px;
            pointer-events: none;
            transition: color 0.3s ease;
        }

        .form-control:focus + .input-icon {
            color: #667eea;
        }

        .text-danger {
            color: #e74c3c;
            font-size: 13px;
            margin-top: 5px;
            display: block;
            animation: shake 0.3s ease;
        }

        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        .validation-summary-errors {
            background: #ffe6e6;
            border-left: 4px solid #e74c3c;
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 20px;
            list-style: none;
        }

        .validation-summary-errors li {
            color: #e74c3c;
            font-size: 14px;
            position: relative;
            padding-left: 20px;
        }

        .validation-summary-errors li:before {
            content: "×";
            position: absolute;
            left: 0;
            font-size: 18px;
            font-weight: bold;
        }

        .btn-login {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
            margin-top: 10px;
        }

        .btn-login:hover {
            background: linear-gradient(135deg, #5568d3, #6339a1);
            transform: translateY(-3px);
            box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
        }

        .btn-login:active {
            transform: translateY(-1px);
        }

        .back-home {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #e0e0e0;
        }

        .back-home a {
            color: #667eea;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .back-home a:hover {
            color: #5568d3;
        }

        .back-home a i {
            transition: transform 0.3s ease;
        }

        .back-home a:hover i {
            transform: translateX(-3px);
        }

        @@media (max-width: 576px) {
            .admin-login-card {
                padding: 30px 20px;
            }

            .admin-header h3 {
                font-size: 24px;
            }

            .form-control {
                padding: 12px 15px 12px 40px;
                font-size: 14px;
            }

            .btn-login {
                padding: 13px;
                font-size: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="admin-login-wrapper">
        <div class="admin-login-card">
            <div class="admin-logo">
                <i class="fa fa-shield"></i>
            </div>

            <div class="admin-header">
                <h3>Admin Panel</h3>
                <p>Đăng nhập để quản lý hệ thống</p>
            </div>

            @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <fieldset>
                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        @Html.TextBoxFor(m => m.TenDangNhap, new
                        {
                            @class = "form-control",
                            placeholder = "Nhập tên đăng nhập",
                            autocomplete = "username"
                        })
                        <i class="fa fa-user input-icon"></i>
                        @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Mật khẩu</label>
                        @Html.PasswordFor(m => m.MatKhau, new
                        {
                            @class = "form-control",
                            placeholder = "Nhập mật khẩu",
                            autocomplete = "current-password"
                        })
                        <i class="fa fa-lock input-icon"></i>
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn-login">
                        <i class="fa fa-sign-in"></i> Đăng nhập
                    </button>
                </fieldset>
            }

            <div class="back-home">
                <a href="@Url.Action("Index", "Home")">
                    <i class="fa fa-arrow-left"></i> Quay về trang chủ
                </a>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>