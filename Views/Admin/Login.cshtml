@model QLKAHYTOON.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Đăng Nhập Quản Trị";
    Layout = null; // Không dùng Layout
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f5f5f5;
        }

        .login-panel {
            margin-top: 150px;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="panel panel-primary login-panel">
            <div class="panel-heading">
                <h3 class="panel-title">Đăng Nhập Trang Quản Trị</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <fieldset>
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control", placeholder = "Tên đăng nhập" })
                            @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Mật khẩu" })
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                        </div>
                        <input type="submit" value="Đăng nhập" class="btn btn-lg btn-primary btn-block" />
                    </fieldset>
                }
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>