@model IEnumerable<QLKAHYTOON.Models.thongtintruyen>
@{
    ViewBag.Title = "Quản Lý Truyện";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Dùng layout Admin
}

<h2>Quản Lý Truyện</h2>

<p>
    <a href="#" class="btn btn-success">Thêm Truyện Mới</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ảnh Bìa</th>
            <th>Tên Truyện</th>
            <th>Tác Giả</th>
            <th>Trạng Thái</th>
            <th style="width: 250px;">Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.AnhTruyen)" alt="@item.TenTruyen" style="width: 60px; height: 90px; object-fit: cover;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTruyen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TacGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrangThai)
                </td>
                <td>
                    @Html.ActionLink("Thêm Chương", "ThemChuong", "Admin",
                        new { maTruyen = item.MaTruyen.Trim() },
                        new { @class = "btn btn-primary btn-sm" })

                    <a href="#" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="#" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>