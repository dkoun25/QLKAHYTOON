@using System.Linq
@model QLKAHYTOON.Models.chuong
@{
    ViewBag.Title = $"Đọc truyện {Model.thongtintruyen.TenTruyen} - Chương {Model.SoChuong}";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var danhSachAnh = ViewBag.DanhSachAnh as List<string>;
    var listChuong = ViewBag.ListChuong as List<QLKAHYTOON.Models.chuong>;

    string maChuongTruoc = ViewBag.MaChuongTruoc;
    string maChuongSau = ViewBag.MaChuongSau;
}

@section Styles {
    <style>
        .navbar, .navbar-fixed-top, .kahy-navbar {
            position: absolute !important;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 10;
        }

        body, .body-content {
            padding-top: 60px !important;
            background-color: #1a1a1a;
        }

        .reading-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #222;
            min-height: 100vh;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
        }

        .reading-container img {
            width: 100%;
            height: auto;
            display: block;
            margin: 0;
            background-color: #333;
            min-height: 500px;
            object-fit: contain;
        }

        /* ⭐ Hiển thị lỗi nếu ảnh không load được */
        .reading-container img[src=""],
        .reading-container img:not([src]) {
            content: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="100%" height="500"><rect fill="%23333"/><text x="50%" y="50%" fill="%23999" text-anchor="middle">Ảnh không tải được</text></svg>');
        }

        .static-nav {
            padding: 20px 0;
            display: flex;
            justify-content: center;
            gap: 10px;
            background-color: #1a1a1a;
        }

        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: rgba(30, 30, 30, 0.95);
            border-top: 1px solid #444;
            backdrop-filter: blur(5px);
            padding: 10px 0;
            z-index: 1000;
            transition: transform 0.3s ease-in-out;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
        }

        .bottom-nav.hidden {
            transform: translateY(100%);
        }

        .bottom-nav .btn {
            border-radius: 5px;
            padding: 5px 10px;
            font-size: 14px;
        }

        .btn-icon-only {
            width: 38px;
            height: 38px;
            border-radius: 50% !important;
            padding: 0 !important;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .chapter-modal-body {
            max-height: 60vh;
            overflow-y: auto;
        }

        .current-chapter {
            border: 1px solid orange !important;
            color: orange !important;
            background-color: rgba(255, 165, 0, 0.1) !important;
            font-weight: bold;
            pointer-events: none;
        }

        .spacer-bottom {
            height: 80px;
        }

        .btn-report {
            position: fixed;
            bottom: 100px;
            right: 20px;
            width: 56px;
            height: 56px;
            border-radius: 50%;
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            border: none;
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
            cursor: pointer;
            z-index: 999;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .btn-report:hover {
            transform: translateY(-5px) scale(1.1);
            box-shadow: 0 6px 20px rgba(220, 53, 69, 0.6);
            background: linear-gradient(135deg, #c82333, #a71d2a);
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .btn-report {
            animation: pulse 2s infinite;
        }

        .btn-report:hover {
            animation: none;
        }

        @@media (max-width: 768px) {
            .btn-report {
                bottom: 80px;
                right: 15px;
                width: 48px;
                height: 48px;
                font-size: 18px;
            }
        }

    </style>
}

<div class="container-fluid p-0">

    <!-- TIÊU ĐỀ TRUYỆN -->
    <div class="container pt-4 pb-2 text-center text-white">
        <h4>
            <a href="@Url.Action("Chitiet", "Truyen", new { id = Model.MaTruyen.Trim() })" class="text-white text-decoration-none">
                @Model.thongtintruyen.TenTruyen
            </a>
        </h4>
        <p class="text-secondary">Chương @Model.SoChuong: @Model.TenChuong</p>
    </div>

    <!-- THANH ĐIỀU HƯỚNG TĨNH (ĐẦU TRANG) -->
    <div class="static-nav">
        @if (!string.IsNullOrEmpty(maChuongTruoc))
        {
            <a href="@Url.Action("DocTruyen", "Truyen", new { id = maChuongTruoc })" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i> Trước
            </a>
        }
        else
        {
            <button class="btn btn-secondary" disabled>Trước</button>
        }

        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#chapterListModal">
            <i class="fa fa-list"></i> Danh sách
        </button>

        @if (!string.IsNullOrEmpty(maChuongSau))
        {
            <a href="@Url.Action("DocTruyen", "Truyen", new { id = maChuongSau })" class="btn btn-primary">
                Sau <i class="fa fa-chevron-right"></i>
            </a>
        }
        else
        {
            <button class="btn btn-secondary" disabled>Sau</button>
        }
    </div>

    <!-- CONTAINER ĐỌC TRUYỆN -->
    <div class="reading-container">
        @if (danhSachAnh != null && danhSachAnh.Count > 0)
        {
            int imageIndex = 1;
            foreach (var anh in danhSachAnh)
            {
                var cleanPath = anh.Trim();
                if (!cleanPath.StartsWith("/"))
                {
                    cleanPath = "/" + cleanPath;
                }

                <div class="image-wrapper">
                    <img src="@Url.Content(cleanPath)"
                         alt="Trang @imageIndex"
                         loading="lazy"
                         onerror="this.style.border='2px solid red'; this.nextElementSibling.style.display='block';" />
                    <div class="image-debug" style="display:none;">
                        Không load được: @cleanPath
                    </div>
                </div>
                imageIndex++;
            }
        }
        else
        {
            <p class="text-white text-center p-5">
                Đang cập nhật nội dung...<br />
                <small class="text-danger">
                    Không có ảnh nào được tìm thấy.<br />
                    AnhChuong: @(string.IsNullOrEmpty(Model.AnhChuong) ? "NULL/EMPTY" : Model.AnhChuong)
                </small>
            </p>
        }
    </div>

    <!-- THANH ĐIỀU HƯỚNG TĨNH (CUỐI TRANG) -->
    <div class="static-nav">
        @if (!string.IsNullOrEmpty(maChuongTruoc))
        {
            <a href="@Url.Action("DocTruyen", "Truyen", new { id = maChuongTruoc })" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i> Trước
            </a>
        }
        else
        {
            <button class="btn btn-secondary" disabled>Trước</button>
        }

        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#chapterListModal">
            <i class="fa fa-list"></i> Danh sách
        </button>

        @if (!string.IsNullOrEmpty(maChuongSau))
        {
            <a href="@Url.Action("DocTruyen", "Truyen", new { id = maChuongSau })" class="btn btn-primary">
                Sau <i class="fa fa-chevron-right"></i>
            </a>
        }
        else
        {
            <button class="btn btn-secondary" disabled>Sau</button>
        }
    </div>

    <!-- PHẦN BÌNH LUẬN -->
    <div class="container mt-5" style="max-width: 800px;">
        <hr />
        <input type="hidden" id="hdMaTruyen" value="@Model.MaTruyen.Trim()" />
        <input type="hidden" id="hdMaChuong" value="@Model.MaChuong.Trim()" />
        @Html.Action("ListBinhLuan", "BinhLuan", new { maTruyen = Model.MaTruyen, isDetail = false })
    </div>

    <div class="spacer-bottom"></div>

    <!-- THANH ĐIỀU HƯỚNG TRƯỢT -->
    <div id="stickyBottomNav" class="bottom-nav hidden">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-light btn-icon-only" title="Về trang chủ">
            <i class="fa fa-home"></i>
        </a>

        @if (!string.IsNullOrEmpty(maChuongTruoc))
        {
            <a href="@Url.Action("DocTruyen", "Truyen", new { id = maChuongTruoc })" class="btn btn-light text-primary">
                <i class="fa fa-chevron-left"></i>
            </a>
        }
        else
        {
            <button class="btn btn-secondary" disabled><i class="fa fa-chevron-left"></i></button>
        }

        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#chapterListModal">
            <i class="fa fa-list"></i> <span class="d-none d-sm-inline">Mục lục</span>
        </button>

        @if (!string.IsNullOrEmpty(maChuongSau))
        {
            <a href="@Url.Action("DocTruyen", "Truyen", new { id = maChuongSau })" class="btn btn-light text-primary">
                <i class="fa fa-chevron-right"></i>
            </a>
        }
        else
        {
            <button class="btn btn-secondary" disabled><i class="fa fa-chevron-right"></i></button>
        }

        <button onclick="scrollToTop()" class="btn btn-outline-info btn-icon-only" title="Lên đầu trang">
            <i class="fa fa-arrow-up"></i>
        </button>
    </div>

    <!-- NÚT BÁO CÁO -->
    <button id="btnReport" class="btn-report" data-bs-toggle="modal" data-bs-target="#reportModal" title="Báo cáo vấn đề">
        <i class="fa fa-flag"></i>
    </button>
</div>

<!-- MODAL DANH SÁCH CHƯƠNG -->
<div class="modal fade" id="chapterListModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content" style="background-color: #333; color: #fff;">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Danh sách chương</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body chapter-modal-body p-0">
                <div class="list-group list-group-flush">
                    @if (listChuong != null)
                    {
                        foreach (var item in listChuong)
                        {
                            bool isActive = item.MaChuong.Trim() == Model.MaChuong.Trim();
                            <a href="@Url.Action("DocTruyen", "Truyen", new { id = item.MaChuong.Trim() })"
                               class="list-group-item list-group-item-action @(isActive ? "current-chapter" : "")"
                               style="background-color: #333; color: #ccc; border-bottom: 1px solid #444;">
                                <div class="d-flex justify-content-between">
                                    <span>Chương @item.SoChuong: @item.TenChuong</span>
                                    @if (isActive)
                                    {
                                        <i class="fa fa-check text-warning"></i>
                                    }
                                </div>
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MODAL BÁO CÁO -->
<div class="modal fade" id="reportModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #dc3545; color: white;">
                <h5 class="modal-title">
                    <i class="fa fa-flag"></i> Báo Cáo Vấn Đề
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Bạn đang báo cáo chương <strong>@Model.SoChuong</strong> của truyện <strong>@Model.thongtintruyen.TenTruyen</strong></p>

                <div class="mb-3">
                    <label class="form-label fw-bold">Loại vấn đề:</label>
                    <select id="reportType" class="form-select">
                        <option value="">-- Chọn loại vấn đề --</option>
                        <option value="Ảnh lỗi">Ảnh bị lỗi/không hiển thị</option>
                        <option value="Nội dung sai">Nội dung sai thứ tự</option>
                        <option value="Vi phạm bản quyền">Vi phạm bản quyền</option>
                        <option value="Nội dung không phù hợp">Nội dung không phù hợp</option>
                        <option value="Khác">Vấn đề khác</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Mô tả chi tiết:</label>
                    <textarea id="reportContent" class="form-control" rows="4" placeholder="Vui lòng mô tả chi tiết vấn đề bạn gặp phải..."></textarea>
                </div>

                <div class="alert alert-info mb-0">
                    <small>
                        <i class="fa fa-info-circle"></i>
                        Báo cáo của bạn sẽ được gửi đến Admin để xử lý.
                    </small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger" onclick="submitReport()">
                    <i class="fa fa-paper-plane"></i> Gửi Báo Cáo
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        let lastScrollTop = 0;
        const navBar = document.getElementById('stickyBottomNav');

        window.addEventListener("scroll", function () {
            let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

            if (scrollTop > lastScrollTop) {
                navBar.classList.remove('hidden');
            } else {
                navBar.classList.add('hidden');
            }

            if (scrollTop <= 100) {
                navBar.classList.add('hidden');
            }

            lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
        }, false);

        function submitReport() {
            var reportType = $('#reportType').val();
            var reportContent = $('#reportContent').val();

            if (!reportType) {
                alert('⚠️ Vui lòng chọn loại vấn đề!');
                return;
            }

            if (!reportContent || reportContent.trim() === '') {
                alert('⚠️ Vui lòng mô tả chi tiết vấn đề!');
                return;
            }

            var maTruyen = $('#hdMaTruyen').val();
            var maChuong = $('#hdMaChuong').val();
            var noiDung = reportType + ': ' + reportContent;

            $.ajax({
                url: '@Url.Action("GuiBaoCao", "BaoCao")',
                type: 'POST',
                data: {
                    maTruyen: maTruyen,
                    maChuong: maChuong,
                    maAdminxuly: null,
                    loaiBaoCao: reportType,
                    noiDung: noiDung
                },
                success: function(res) {
                    if (res.success) {
                        alert('✅ Gửi báo cáo thành công! Cảm ơn bạn đã đóng góp.');
                        $('#reportModal').modal('hide');
                        $('#reportType').val('');
                        $('#reportContent').val('');
                    } else {
                        alert('❌ ' + (res.msg || 'Có lỗi xảy ra!'));
                    }
                },
                error: function() {
                    alert('❌ Lỗi kết nối server!');
                }
            });
        }
    </script>
}